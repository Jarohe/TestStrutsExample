<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!-- Set params for DB -->
    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://localhost:3306/actimind</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>actimind</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>actimindAdmin</param-value>
    </context-param>
    <context-param>
        <param-name>dbDriver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>

    <listener>
        <listener-class>common.listeners.DbServletContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>/WEB-INF/pages/loginPage.jsp</welcome-file>
    </welcome-file-list>

    <!-- Добавляет connection в request -->
    <filter>
        <filter-name>ConnectionFilter</filter-name>
        <filter-class>common.filters.ConnectionFilter</filter-class>
    </filter>

    <!-- Не пускает авторизированного пользователя на welcome.html -->
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>common.filters.AuthorizationFilter</filter-class>
        <init-param>
            <param-name>home_page</param-name>
            <param-value>/login.html</param-value>
        </init-param>
        <init-param>
            <param-name>error_page</param-name>
            <param-value>/error.html</param-value>
        </init-param>
    </filter>

    <!-- Проверяет что пользователь авторизирован -->
    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>common.filters.AccessFilter</filter-class>
        <init-param>
            <param-name>home_page</param-name>
            <param-value>/welcome.html</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>ConnectionFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/welcome.html</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <url-pattern>/system/*</url-pattern>
    </filter-mapping>

</web-app>